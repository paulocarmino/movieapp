{
  "extends": [
    "next",
    "next/core-web-vitals",
    "prettier",
    "plugin:storybook/recommended",
    "plugin:tailwindcss/recommended"
  ],
  "plugins": ["prettier"],
  "ignorePatterns": ["*.config.js"],
  "rules": {
    "react/display-name": "off",
    "tailwindcss/no-custom-classname": "off",
    "import/no-anonymous-default-export": "off",
    "import/order": [
      "error",
      {
        "alphabetize": {
          "order": "asc"
        }
      }
    ]
  }
}
